<%= provide(:title, @applicant.last_name) %>
<div class="row">
  <div class="span6 offset3">
	<%= simple_form_for @applicant do |f| -%>
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.input :first_name, :label => "First Name", :input_html => {:value => @applicant.first_name} %>
		<%= f.input :middle_name, :label => "Middle Name", :input_html => {:value => @applicant.middle_name}  %>
		<%= f.input :last_name, :label => "Last Name", :input_html => {:value => @applicant.last_name} %>
		<%= f.input :gender, :collection => ["Male", "Female"], :as => :radio_buttons, :input_html => {:value => @applicant.gender}, 
			:item_wrapper_class => :inline %>
		<%= f.input :grade,:collection => ["11", "12"], :as => :radio_buttons, :label => "Grade", :input_html => {:value => @applicant.grade},
		 	:item_wrapper_class => :inline%>
		<%= f.input :parent_first_name, :label => "Parent/Guardian First Name", :input_html => {:value => @applicant.parent_first_name} %> 
		<%= f.input :parent_last_name, :label => "Parent/Guardian Last Name", :input_html => {:value => @applicant.parent_last_name} %>
		<%= f.input :address, :label => "Home Address", :input_html => {:value => @applicant.address} %>
		<%= f.input :home_phone, :label => "Home Phone", :input_html => {:value => @applicant.home_phone} %>
		<%= f.input :work_phone, :label => "Work Phone", :input_html => {:value => @applicant.work_phone} %>
		<%= f.input :email, :label => "Email", :input_html => {:value => @applicant.email} %>
	<hr />
	<p>
		Names of Teachers Completing Recommendations:
		<%= f.input :math_teacher, :label => "Math:", :input_html => {:value => @applicant.math_teacher} %>
		<%= f.input :math_teacher_email, :label => "Math Teacher Email", :input_html => {:value => @applicant.math_teacher_email} %>
		<%= f.input :science_teacher, :label => "Science:", :input_html => {:value => @applicant.science_teacher} %>
		<%= f.input :science_teacher_email, :label => "Science Teacher Email", :input_html => {:value => @applicant.science_teacher_email} %>
		<%= f.input :english_teacher, :label => "English:", :input_html => {:value => @applicant.english_teacher} %>
		<%= f.input :english_teacher_email, :label => "English Teacher Email", :input_html => {:value => @applicant.english_teacher_email} %>
	</p>
  </div>
<div class="span6 offset3">
		<h3>School: <%= @applicant.school.name %></h3><br /><br />
		<%= f.input :school_phone, :label => "School Phone" %>
		<%= f.input :counselor_name, :label => "Name of Guidance Counselor Designee" %>
		<p>
			Please attach an official copy of the student's transcript with the GPA 
		   calculated as unweighted and an official copy of most recent standardized 
		   test data.
		</p>
		<%= f.input :due_to, :label => "Information due to" %>
		<%= f.input :date_due, :as => :string, :label => "Date Due" %>
		<%= f.submit "Submit school information", class: "btn btn-large" %>
	<% end %>
</div>
</div>