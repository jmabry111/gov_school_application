<% provide(:title, 'All Applicants') %>
<h1>All Applicants</h1>

<%= form_tag coordinator_applicants_path, :id => "applicants_search", :method => :get do %>
	<%= hidden_field_tag :direction, params[:direction] %>
	<%= hidden_field_tag :sort, params[:sort] %>
	<p>
		<div class="form-horizontal">
			<!--[if IE 9]>
			<span class="gray">Search by name or school</span><br />
			<![endif]-->
			<%= text_field_tag :search, params[:search], class: "input-large", :placeholder => "Search by name or school" %>
			<%= submit_tag "Search", class: "btn btn-mini", :name => nil, :id => "search_button" %>
		</div>
	</p>
<% end %>


<div id="applicants_ajax_table"><%= render 'applicants' %></div>
